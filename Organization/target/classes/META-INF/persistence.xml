<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="myPersistence" >
    

      <non-jta-data-source>java:/organization</non-jta-data-source>
      <class>it.h2i.idservice.accountablemodel.User</class>
          <class>it.h2i.idservice.accountablemodel.Typology</class>
            <class>it.h2i.idservice.accountablemodel.Transcation</class>
              <class>it.h2i.idservice.accountablemodel.Role</class>
                <class>it.h2i.idservice.accountablemodel.Organization</class>
                  <class>it.h2i.idservice.accountablemodel.Function</class>
                    <class>it.h2i.idservice.accountablemodel.Appertain</class>
                      <class>it.h2i.idservice.accountablemodel.Appertainid</class>
                      <class>it.h2i.idservice.accountablemodel.Token</class>
                      
      <properties>
         <property name="hibernate.dialect" 
                  value="org.hibernate.dialect.MySQL5Dialect"/>
         <property name="hibernate.hbm2ddl.auto" value="validate"/>
      </properties>
   </persistence-unit>

</persistence>       