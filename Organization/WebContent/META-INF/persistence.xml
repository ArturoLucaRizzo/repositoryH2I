<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="myPersistence">


		<non-jta-data-source>java:/organization</non-jta-data-source>
		<class>it.h2i.idservice.accountablemodel.model.User</class>
		<class>it.h2i.idservice.accountablemodel.model.Typology</class>
		<class>it.h2i.idservice.accountablemodel.model.Transaction</class>
		<class>it.h2i.idservice.accountablemodel.model.Role</class>
		<class>it.h2i.idservice.accountablemodel.model.Organization</class>
		<class>it.h2i.idservice.accountablemodel.model.Function</class>
		<class>it.h2i.idservice.accountablemodel.model.Appertain</class>
		<class>it.h2i.idservice.accountablemodel.model.AppertainId</class>
		<class>it.h2i.idservice.accountablemodel.model.Token</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
		</properties>
	</persistence-unit>

</persistence>       